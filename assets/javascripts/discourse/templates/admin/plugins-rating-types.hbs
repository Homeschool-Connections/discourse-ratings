<h3>{{i18n 'admin.ratings.type.heading'}}</h3>

{{#if hasTypes}}
  <table>
    <thead>
      <tr>
        <th>{{i18n "admin.ratings.type.slug"}}</th>
        <th>{{i18n "admin.ratings.type.name"}}</th>
      </tr>
    </thead>
    <tbody>
      {{#each ratingTypes as |type|}}
        {{rating-type
          addType=(action "addType")
          updateType=(action "updateType")
          destroyType=(action "destroyType")
          type=type}}
      {{/each}}
    </tbody>
  </table>
{{else}}
  {{i18n "admin.ratings.type.none"}}
{{/if}}

<div class="type-list-controls">
  {{d-button
    action=(action "newType")
    label="admin.ratings.type.new"
    icon="plus"}}
</div>